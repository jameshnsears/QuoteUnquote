<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="0dp"
    android:paddingEnd="5dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:paddingVertical="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:paddingVertical="10dp"
        android:text="@string/fragment_footer_os_warning"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_footer_warning_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textIsSelectable="true"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/layoutFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="end">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:contentDescription="@string/fragment_footer_github"
                android:paddingStart="0dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_footer_github_logo" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>